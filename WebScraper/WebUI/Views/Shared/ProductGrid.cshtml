@model WebUI.Models.ProductsListViewModel

@if (Model.NumProducts == 0)
{
    <div class="alert alert-info">Sorry, no results match your search ¯\_(ツ)_/¯</div>
}
else
{
    foreach (var p in Model.Products)
    {
        @Html.Partial("ProductSummary", p)
    }
}

